<h1>Welcome!</h1>
<h2>Registration Form</h2>
<% if flash[:errors] %>
  <%= flash[:errors] %>
<% end %>


<%= form_for @user, :url => { :action => "create" } do |f| %>
  <%= f.label 'first name' %>
  <%= f.text_field :first_name %><br>
  <%= f.label 'last name' %>
  <%= f.text_field :last_name %><br>
  <%= f.label 'email' %>
  <%= f.text_field :email %><br>
  <%= f.label 'password' %>
  <%= f.password_field :password %><br>
  <%= f.label 'password_confirmation' %>
  <%= f.password_field :password_confirmation, name: 'Password Confirmation' %><br>
  <%= submit_tag 'Register' %>
<% end %>
<hr>

<h2>Login</h2>
<% if flash[:error]%>
  <%= flash[:error] %>
<% end %>
<%= form_for @user, :url => { controller: 'sessions', :action => "create" } do |f| %>
  <%= f.label 'email' %>
  <%= f.text_field :email %><br>
  <%= f.label 'password' %>
  <%= f.password_field :password %><br>
  <%= submit_tag 'Log In' %>
<% end %>

